<h1>Create Appearance</h1>

<%= form_for @episode_guest do |f| %>
	<%= f.label :guest_id %>
    <%= f.collection_select :guest_id, Guest.all, :id, :name %>
    <br>
    <%= f.label :episode_id %>
    <%= f.collection_select :episode_id, Episode.all, :id, :number %>
    <br>
    <%= f.label :rating %>
    <%= f.number_field(:rating, in: 1..5, step: 1, :value => 1 ) %>
    <br>
    <br>
<%= f.submit "Create Appearance" %>
<% end %>

<p><%= link_to("Back to Guests", guests_path) %></p>